{
  "name": "minimal-mistakes",
  "version": "4.13.0",
  "description": "Minimal Mistakes 2 column Jekyll theme.",
  "repository": {
    "type": "git",
    "url": "git://github.com/mmistakes/minimal-mistakes.git"
  },
  "keywords": [
    "jekyll",
    "theme",
    "minimal"
  ],
  "author": "Michael Rose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmistakes/minimal-mistakes/issues"
  },
  "homepage": "https://mmistakes.github.io/minimal-mistakes/",
  "engines": {
    "node": ">= 0.10.0"
  },
  "devDependencies": {
    "npm-run-all": "^1.7.0",
    "onchange": "^2.2.0",
    "uglify-js": "^2.6.1",
    "ejs": "~2.5.7",
    "imagemin": "~5.3.1",
    "imagemin-svgo": "~5.2.2",
    "rimraf": "~2.6.1",
    "svgstore-cli": "~1.3.0"
  },
  "scripts": {
    "uglify": "uglifyjs assets/js/vendor/jquery/jquery-3.3.1.js assets/js/vendor/bigfoot/bigfoot.js assets/js/vendor/svg4everybody/svg4everybody.js assets/js/vendor/lity/lity.js assets/js/plugins/jquery.fitvids.js assets/js/plugins/jquery.greedy-navigation.js assets/js/plugins/jquery.smooth-scroll.min.js assets/js/_main.js -c -m -o assets/js/main.min.js",
    "add-banner": "node banner.js",
    "watch:js": "onchange \"assets/js/**/*.js\" -e \"assets/js/main.min.js\" -- npm run build:js",
    "build:js": "npm run uglify && npm run add-banner",
    "rimraf": "rimraf dist",
    "imageminsvgo": "node imagemin-svgo.js",
    "prebuildsprite": "npm run imageminsvgo",
    "buildsprite": "svgstore -o assets/icons/icons.svg dist/svg/**/*.svg --inline",
    
    "start:js": "npm run build:js",
    "start:svg": "npm run rimraf && npm run buildsprite"
  }
}
